<!DOCTYPE html>

<title>Infos du Profil</title>

{% block body %}
    <h1>Infos du Profil</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Texte</th>
                <th>Photo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.age }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.photo }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.linkedin }}</td>
                <td>{{ user.github }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}