<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/ce1160e1b3.js" crossorigin="anonymous"></script>

        {% block stylesheets %}
            <link rel="stylesheet" href="/assets/css/admin/login.css">
            <link rel="stylesheet" href="/assets/css/admin/variables.css">
        {% endblock %}

        <title>{% block title %}Login ADMIN{% endblock %}</title>

    </head>

    <body>

        {% block body %}

                <div class='container'>
                    <h1 class='connexion'>Connexion vers l'envers du d√©cors</h1>
                    <div><i class="fas fa-user"></i></div>
                    <form action="{{ path('admin_login') }}" method="post">
                        <div class='field'>
                            <label for="username">Identifiant:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                        </div>
                        <div class='field'>
                            <label for="password">Mot de passe:</label>
                            <input type="password" id="password" name="_password"/>
                        </div>

                        <input type="hidden" name="_target_path" value="/admin"/>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class='btn-primary' type="submit">Se connecter</button>

                    </form>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                </div>
        {% endblock %}

    </body>
