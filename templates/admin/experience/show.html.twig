<!DOCTYPE html>

<title>Experience</title>

{% block body %}
    <h1>Experience {{ experience.id }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Texte</th>
                <td>{{ experience.texte }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ experience.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('experience_index') }}">Retour à la liste des expériences</a>

    <a href="{{ path('experience_edit', {'id': experience.id}) }}">Modifier</a>

    {{ include('admin/experience/_delete_form.html.twig') }}
{% endblock %}
